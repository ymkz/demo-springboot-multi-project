          },
          "authorId": {
            "type": "integer",
            "format": "int32",
            "description": "著者ID",
            "example": 1
          },
          "authorName": {
            "type": "string",
            "description": "著者名",
            "example": "Dustin Boswell"
          },
          "publisherId": {
            "type": "integer",
            "format": "int32",
            "description": "出版社ID",
            "example": 1
          },
          "publisherName": {
            "type": "string",
            "description": "出版社名",
            "example": "O\u0027Reilly"
          }
        },
        "required": [
          "id",
          "isbn",
          "status",
          "title"
        ]
      }
    },
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "name": "ApiKeyAuth",
        "in": "header"
      }
    }
  }
}